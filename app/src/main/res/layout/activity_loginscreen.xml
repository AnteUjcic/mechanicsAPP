        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="341dp"
        tools:text="Prijava" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="290dp"
        android:layout_height="49dp"
